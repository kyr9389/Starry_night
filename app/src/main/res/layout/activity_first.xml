<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100E23"
    android:weightSum="1">

    <!-- 임시 비활성화 (코드 저장용)
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:padding="0dp"
        app:srcCompat="@drawable/planet_button" />
        -->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/advertise_image"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D8D8D8"
        android:text="   게시판 목록"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/dailyBoardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:text="   일상 이야기    ***    오늘 당신의 하루는 어땠나요?"
        android:textSize="18sp"
        android:textColor="#D8D8D8"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#2D2851"/>

    <TextView
        android:id="@+id/worryBoardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:text="   고민 이야기    ***    누구에게도 말하지 못했던"
        android:textSize="18sp"
        android:textColor="#D8D8D8"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#2D2851"/>

    <TextView
        android:id="@+id/boastBoardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:text="   자랑 이야기    ***    함께 나누고 싶은 경험들"
        android:textSize="18sp"
        android:textColor="#D8D8D8"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#2D2851"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="#D8D8D8"
        android:text="   ***\n   별 헤는 밤은 미처 잠들지 못한 당신의 하루를 위한 모두의 일기장입니다.\n   여러분의 이야기들을 각자의 별들에 새겨주세요."
        android:textSize="18sp"/>
</LinearLayout>